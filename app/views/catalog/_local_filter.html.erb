<% if @filtered_results_total > 0 %>
  <% if local_filter_applied? %>
    <%= link_to t("trln_argon.local_filter.applied", consortium_name: consortium_long_name,
                                                     filtered_results_total: number_with_delimiter(@filtered_results_total),
                                                     entry_name: entry_name(@filtered_results_total)),
          url_for(search_state.to_h.merge(local_filter: 'false', page: '1')),
          class: "trln-results-link" %>
  <% else %>
    <%= link_to t("trln_argon.local_filter.not_applied", local_institution_name: institution_long_name,
                                                         filtered_results_total: number_with_delimiter(@filtered_results_total),
                                                         entry_name: entry_name(@filtered_results_total)),
          url_for(search_state.to_h.merge(local_filter: 'true', page: '1')),
          class: "institution-results-link" %>
  <% end %>

<% elsif !local_filter_applied? %>

    <%= link_to t("trln_argon.local_filter.no_results", local_institution_name: institution_long_name), root_path(local_filter: 'true'), class: "institution-results-link" %>

<% end %>
